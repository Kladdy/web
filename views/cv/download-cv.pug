//- last_updated should be formattes as follow: 07-10-2022 (dd-mm-yyyy)
- var last_updated = "08-10-2022"
- var split = last_updated.split("-")
-
  var cv_downloaded = function () {
    $.getJSON("https://api.countapi.xyz/hit/sigfrid.me/cv-downloads", function(response) {
        $("#cv-downloads").text(response.value);
    });
  }

a(href=`/downloads/cv-en-${last_updated}.pdf` download="CV - Sigfrid Stjärnholm (English)" onclick='cv_downloaded("en")')
  p
    i.far.fa-arrow-alt-circle-down.fa-fw.mr-2(data-fa-transform='grow-3') 
    span.flag-icon.flag-icon-gb
    = " "
    = t("cv.download.en", {day: split[0], month: split[1], year: split[2]})
    //- = t("cv.download.en")


